<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           stylesheets="@../stylesheets/epic-stylesheet.css, @../stylesheets/general-stylesheet.css"
           fx:controller="comprehensive.project.nasaapi.controllers.ImagePreviewController"
           prefHeight="400.0" prefWidth="400.0">
    <VBox alignment="CENTER" spacing="10">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <ImageView fx:id="imagePreview" fitWidth="400" fitHeight="400" preserveRatio="true" />
        <Button fx:id="buttonPreview" alignment="CENTER"
                onAction="#handleFavoriteButton">
            <graphic>
                <FontIcon fx:id="heartIcon" iconLiteral="far-heart" iconSize="24" />
            </graphic>
        </Button>
    </VBox>
</StackPane>
